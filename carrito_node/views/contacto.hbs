<div class="container my-5">
    <h1 class="text-center">{{title}}</h1>

    <div class="d-flex justify-content-center mt-4">
        <form action="" method="post" class="w-50">
            <input required class="form-control my-2" type="text" name="nombre" id="" placeholder="Nombre completo">
            <input required class="form-control my-2" type="email" name="email" id="" placeholder="Email">
            <textarea required class="form-control my-2 textareas" name="mensaje" id=""
                placeholder="Mensaje"></textarea>
            <div class="text-end">
                <input type="submit" value="Enviar" class="btn btn-primary">
            </div>
        </form>
    </div>

</div>